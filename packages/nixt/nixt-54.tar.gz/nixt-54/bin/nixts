#!/usr/bin/env python3
# This file is placed in the Public Domain.


"service"


import getpass


from nixt.modules import face
from nixt.persist import pidname
from nixt.runtime import errors, forever, init, pidfile, privileges, wrap


def main():
    "main"
    privileges(getpass.getuser())
    name = pidname()
    pidfile(name)
    init(face)
    forever()


if __name__ == "__main__":
    wrap(main, print)
    errors(print)
