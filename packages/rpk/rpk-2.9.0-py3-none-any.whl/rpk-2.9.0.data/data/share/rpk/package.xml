<?xml version="1.0"?>
<package format="3">
  <name>rpk</name>
  <version>2.9.0</version>
  <description>A tool to create and package robot applications</description>
  <maintainer email="severin.lemaignan@pal-robotics.com">SÃ©verin Lemaignan</maintainer>
  <license>Apache License 2.0</license>

  <exec_depend>python3-jinja2</exec_depend>

  <!--
      Note that 'rclpy' and 'hri_actions_msgs' are not strictly required
      to run the code generator. However, generated mission controller 
      will always require them. In order to offer a better developer experience,
      it is nicer to install these 2 dependencies at the same time as the tool
      itself is installed.
  -->
  <exec_depend>python3-jinja2</exec_depend>

  <depend>rclpy</depend>
  <depend>hri_actions_msgs</depend>
  
  <test_depend>ament_copyright</test_depend>
  <test_depend>ament_flake8</test_depend>
  <test_depend>ament_pep257</test_depend>
  <test_depend>python3-pytest</test_depend>

  <export>
    <build_type>ament_python</build_type>
  </export>
</package>
