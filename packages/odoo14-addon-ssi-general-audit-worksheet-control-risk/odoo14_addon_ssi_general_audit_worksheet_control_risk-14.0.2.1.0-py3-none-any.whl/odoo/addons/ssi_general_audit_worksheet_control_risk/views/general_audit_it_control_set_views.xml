<odoo>

    <record id="general_audit_it_control_set_view_search" model="ir.ui.view">
        <field name="name">general_audit_it_control_set - search</field>
        <field name="model">general_audit_it_control_set</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="general_audit_it_control_set_view_tree" model="ir.ui.view">
        <field name="name">general_audit_it_control_set - tree</field>
        <field name="model">general_audit_it_control_set</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
            </data>
        </field>
    </record>

    <record id="general_audit_it_control_set_view_form" model="ir.ui.view">
        <field name="name">general_audit_it_control_set - form</field>
        <field name="model">general_audit_it_control_set</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[1]" position="before">
                    <page name="indicator" string="Indicator">
                        <field name="it_control_indicator_ids" />
                        <field name="it_control_ids" />
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_it_control_set_action" model="ir.actions.act_window">
        <field name="name">IT Control Sets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">general_audit_it_control_set</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="general_audit_it_control_set_menu"
        name="Sets"
        parent="menu_configuration_it_control"
        action="general_audit_it_control_set_action"
        sequence="140"
        groups="general_audit_it_control_set_group"
    />

</odoo>
