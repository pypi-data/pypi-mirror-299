<odoo>

    <record id="general_audit_ws_eabdaad_view_search" model="ir.ui.view">
        <field name="name">general_audit_ws_eabdaad form</field>
        <field name="model">general_audit_ws_eabdaad</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="general_audit_ws_eabdaad_view_tree" model="ir.ui.view">
        <field name="name">general_audit_ws_eabdaad tree</field>
        <field name="model">general_audit_ws_eabdaad</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_tree"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="business_cycle_id" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_ws_eabdaad_view_form" model="ir.ui.view">
        <field name="name">general_audit_ws_eabdaad form</field>
        <field name="model">general_audit_ws_eabdaad</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_form"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[1]" position="before">
                    <page name="detail" string="Details">
                        <group name="detail_1" colspan="4" col="1">
                            <field name="allowed_business_cycle_ids" invisible="1" />
                            <field
                                name="business_cycle_id"
                                domain="[('id','in',allowed_business_cycle_ids)]"
                            />
                        </group>
                        <field name="detail_ids">
                            <tree>
                                <field name="sequence" widget="handle" />
                                <field name="key_internal_control_id" />
                                <field name="name" />
                                <field name="frequency" />
                                <field
                                    name="related_account_type_ids"
                                    widget="many2many_tags"
                                />
                                <field name="rely_on_control" />
                                <field name="toc_analysis" />
                                <field name="result" />
                            </tree>
                            <form>
                                <group name="detail_2" colspan="4" col="2">
                                    <field name="sequence" />
                                    <field
                                        name="key_internal_control_id"
                                        domain="[('business_cycle_id','=',parent.business_cycle_id)]"
                                    />
                                    <field name="name" />
                                    <field name="frequency" />
                                </group>
                                <separator string="Risk Identification" />
                                <field name="risk_identification_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle" />
                                        <field name="name" />
                                    </tree>
                                </field>
                                <separator string="Risk Identification" />
                                <field name="what_can_go_wrong_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle" />
                                        <field name="name" />
                                    </tree>
                                </field>
                                <group name="detail_3" colspan="4" col="2">
                                    <field name="documentation" />
                                    <field
                                        name="related_account_type_ids"
                                        widget="many2many_tags"
                                    />
                                    <field name="rely_on_control" />
                                    <field name="toc_analysis" />
                                    <field name="toc_reference" />
                                    <field name="result" />
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_ws_eabdaad_action" model="ir.actions.act_window">
        <field name="name">Business Cycle Internal Controls</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">general_audit_ws_eabdaad</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="general_audit_ws_eabdaad_menu"
        name="Business Cycle Internal Controls"
        parent="ssi_general_audit.menu_general_audit_risk_assesment"
        action="general_audit_ws_eabdaad_action"
        sequence="1503"
        groups="general_audit_ws_eabdaad_viewer_group"
    />


</odoo>
