    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','general_audit_ws_c0e0eec'),('value','in',['draft','open','done'])]"
        />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field
            name="group_ids"
            eval="[(6,0,[ref('general_audit_ws_c0e0eec_validator_group')])]"
