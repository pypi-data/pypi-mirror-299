<odoo>
<record id="policy_template_general_audit_ws_c0e0eec" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="model_general_audit_ws_c0e0eec" />
    <field
            name="state_field_id"
            search="[('model_id.model','=','general_audit_ws_c0e0eec'),('name','=','state')]"
        />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<!-- Start -->
<record
        id="policy_template_general_audit_ws_c0e0eec_open"
        model="policy.template_detail"
    >
    <field name="template_id" ref="policy_template_general_audit_ws_c0e0eec" />
    <field
            name="field_id"
            search="[('model_id.model','=','general_audit_ws_c0e0eec'),('name','=','open_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','general_audit_ws_c0e0eec'),('value','=','draft')]"
        />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
            name="group_ids"
            eval="[(6,0,[ref('general_audit_ws_c0e0eec_user_group')])]"
        />
    <field name="restrict_additional" eval="0" />
</record>

