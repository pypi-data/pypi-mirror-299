<odoo>

    <record id="general_audit_ws_f6a227_view_search" model="ir.ui.view">
        <field name="name">general_audit_ws_f6a227 form</field>
        <field name="model">general_audit_ws_f6a227</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="general_audit_ws_f6a227_view_tree" model="ir.ui.view">
        <field name="name">general_audit_ws_f6a227 tree</field>
        <field name="model">general_audit_ws_f6a227</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_tree"
        />
        <field name="arch" type="xml">
            <data>
            </data>
        </field>
    </record>

    <record id="general_audit_ws_f6a227_view_form" model="ir.ui.view">
        <field name="name">general_audit_ws_f6a227 form</field>
        <field name="model">general_audit_ws_f6a227</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_form"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[1]" position="before">
                    <page name="detail" string="Details">

                        <field name="detail_ids">
                            <tree>
                                <field name="sequence" widget="handle" />
                                <field name="step_id" />
                                <field name="description" />
                                <field name="control_activity" />
                                <field name="audit_relevancy" />
                                <field name="misstatement_identification" />
                                <field
                                    name="related_account_type_ids"
                                    widget="many2many_tags"
                                />
                            </tree>
                            <form>
                                <group name="detail" colspan="4" col="2">
                                    <field name="sequence" />
                                    <field name="step_id" />
                                    <field name="description" />
                                    <field name="control_activity" />
                                    <field name="audit_relevancy" />
                                    <field name="misstatement_identification" />
                                    <field
                                        name="related_account_type_ids"
                                        widget="many2many_tags"
                                        domain="[('id','in',parent.account_type_ids)]"
                                    />
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_ws_f6a227_action" model="ir.actions.act_window">
        <field name="name">Understanding of preparation of Financial Statements</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">general_audit_ws_f6a227</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="general_audit_ws_f6a227_menu"
        name="Understanding of preparation of Financial Statements"
        parent="ssi_general_audit.menu_general_audit_risk_assesment"
        action="general_audit_ws_f6a227_action"
        sequence="1503"
        groups="general_audit_ws_f6a227_viewer_group"
    />


</odoo>
