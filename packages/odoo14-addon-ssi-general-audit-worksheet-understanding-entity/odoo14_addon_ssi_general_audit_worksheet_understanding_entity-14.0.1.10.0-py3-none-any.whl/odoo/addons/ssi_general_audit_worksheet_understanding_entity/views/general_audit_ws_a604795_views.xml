<odoo>

    <record id="general_audit_ws_a604795_view_search" model="ir.ui.view">
        <field name="name">general_audit_ws_a604795 form</field>
        <field name="model">general_audit_ws_a604795</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="general_audit_ws_a604795_view_tree" model="ir.ui.view">
        <field name="name">general_audit_ws_a604795 tree</field>
        <field name="model">general_audit_ws_a604795</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_tree"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='general_audit_id']" position="after">
                    <field name="business_process_id" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_ws_a604795_view_form" model="ir.ui.view">
        <field name="name">general_audit_ws_a604795 form</field>
        <field name="model">general_audit_ws_a604795</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_form"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[1]" position="before">
                    <page name="detail" string="Details">
                        <group name="detail_1" colspan="4" col="2">
                            <field name="business_process_id" />
                        </group>
                        <field name="detail_ids">
                            <tree>
                                <field name="class_transaction_id" />
                                <field
                                    name="related_account_type_ids"
                                    widget="many2many_tags"
                                />
                            </tree>
                            <form>
                                <group name="detail_1" colspan="4" col="2">
                                    <field name="class_transaction_id" />
                                </group>
                                <field name="business_function_ids">
                                    <tree editable="bottom">
                                        <field name="business_function_id" />
                                        <field
                                            name="business_document_ids"
                                            widget="many2many_tags"
                                        />
                                    </tree>
                                    <form>
                                        <group name="detail_2" colspan="4" col="2">
                                            <field name="business_function_id" />
                                            <field
                                                name="business_document_ids"
                                                widget="many2many_tags"
                                            />
                                        </group>
                                    </form>
                                </field>
                                <group name="detail_3" colspan="4" col="2">
                                    <field
                                        name="related_account_type_ids"
                                        widget="many2many_tags"
                                    />
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_ws_a604795_action" model="ir.actions.act_window">
        <field name="name">Business Cycles</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">general_audit_ws_a604795</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="general_audit_ws_a604795_menu"
        name="Business Cycles"
        parent="ssi_general_audit.menu_general_audit_risk_assesment"
        action="general_audit_ws_a604795_action"
        sequence="1503"
        groups="general_audit_ws_a604795_viewer_group"
    />


</odoo>
