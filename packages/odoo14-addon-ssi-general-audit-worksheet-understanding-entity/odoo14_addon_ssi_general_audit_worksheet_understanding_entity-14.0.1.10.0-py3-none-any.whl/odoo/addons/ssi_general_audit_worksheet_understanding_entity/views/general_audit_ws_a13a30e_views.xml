<odoo>

    <record id="general_audit_ws_a13a30e_view_search" model="ir.ui.view">
        <field name="name">general_audit_ws_a13a30e form</field>
        <field name="model">general_audit_ws_a13a30e</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="general_audit_ws_a13a30e_view_tree" model="ir.ui.view">
        <field name="name">general_audit_ws_a13a30e tree</field>
        <field name="model">general_audit_ws_a13a30e</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_tree"
        />
        <field name="arch" type="xml">
            <data>
            </data>
        </field>
    </record>

    <record id="general_audit_ws_a13a30e_view_form" model="ir.ui.view">
        <field name="name">general_audit_ws_a13a30e form</field>
        <field name="model">general_audit_ws_a13a30e</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_form"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[1]" position="before">
                    <page name="detail" string="Details">
                        <field name="detail_ids">
                            <tree editable="top">
                                <field name="sequence" widget="handle" />
                                <field name="regulation_id" />
                                <field
                                    name="item_id"
                                    domain="[('regulation_id','=',regulation_id)]"
                                />
                                <field
                                    name="related_account_type_ids"
                                    domain="[('id','in',parent.account_type_ids)]"
                                    widget="many2many_tags"
                                />
                                <field
                                    name="significant_impact"
                                    widget="boolean_toggle"
                                />
                            </tree>
                            <form>
                                <group name="detail_1" colspan="4" col="2">
                                    <field name="sequence" widget="handle" />
                                    <field name="regulation_id" />
                                    <field
                                        name="item_id"
                                        domain="[('regulation_id','=',regulation_id)]"
                                    />
                                    <field
                                        name="related_account_type_ids"
                                        domain="[('id','in',parent.account_type_ids)]"
                                        widget="many2many_tags"
                                    />
                                    <field name="standard_detail_ids" invisible="0" />
                                    <field
                                        name="significant_impact"
                                        widget="boolean_toggle"
                                    />
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_ws_a13a30e_action" model="ir.actions.act_window">
        <field name="name">Understanding of Relevant Regulations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">general_audit_ws_a13a30e</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="general_audit_ws_a13a30e_menu"
        name="Understanding of Relevant Regulations"
        parent="ssi_general_audit.menu_general_audit_risk_assesment"
        action="general_audit_ws_a13a30e_action"
        sequence="1503"
        groups="general_audit_ws_a13a30e_viewer_group"
    />


</odoo>
