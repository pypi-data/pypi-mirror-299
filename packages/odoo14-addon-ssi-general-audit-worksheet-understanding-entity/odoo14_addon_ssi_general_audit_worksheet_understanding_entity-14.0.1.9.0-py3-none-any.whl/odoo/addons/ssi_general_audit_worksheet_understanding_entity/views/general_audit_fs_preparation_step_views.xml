<odoo>

    <record id="general_audit_fs_preparation_step_view_search" model="ir.ui.view">
        <field name="name">general_audit_fs_preparation_step - search</field>
        <field name="model">general_audit_fs_preparation_step</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="general_audit_fs_preparation_step_view_tree" model="ir.ui.view">
        <field name="name">general_audit_fs_preparation_step - tree</field>
        <field name="model">general_audit_fs_preparation_step</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='code']" position="before">
                    <field name="sequence" widget="handle" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_fs_preparation_step_view_form" model="ir.ui.view">
        <field name="name">general_audit_fs_preparation_step - form</field>
        <field name="model">general_audit_fs_preparation_step</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='code']" position="after">
                    <field name="sequence" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_fs_preparation_step_action" model="ir.actions.act_window">
        <field name="name">FS Preparation Steps</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">general_audit_fs_preparation_step</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="general_audit_fs_preparation_step_menu"
        name="FS Preparation Steps"
        parent="ssi_general_audit.menu_configuration_general_audit"
        action="general_audit_fs_preparation_step_action"
        sequence="110"
        groups="general_audit_fs_preparation_step_group"
    />

</odoo>
