<odoo>

    <record id="general_audit_ws_bdcdfc5_view_search" model="ir.ui.view">
        <field name="name">general_audit_ws_bdcdfc5 search</field>
        <field name="model">general_audit_ws_bdcdfc5</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="general_audit_ws_bdcdfc5_view_tree" model="ir.ui.view">
        <field name="name">general_audit_ws_bdcdfc5 tree</field>
        <field name="model">general_audit_ws_bdcdfc5</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_tree"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='conclusion_id']" position="before">
                    <field name="business_environment_id" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_ws_bdcdfc5_view_form" model="ir.ui.view">
        <field name="name">general_audit_ws_bdcdfc5 form</field>
        <field name="model">general_audit_ws_bdcdfc5</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_form"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[1]" position="before">
                    <page name="detail" string="Details">
                        <group name="detail_1" colspan="4" col="2">
                            <field name="business_environment_id" />
                        </group>
                        <field name="detail_ids">
                            <tree>
                                <field name="sequence" widget="handle" />
                                <field name="understanding_result" />
                                <field name="impact_to_financial_report" />
                                <field
                                    name="related_account_type_ids"
                                    widget="many2many_tags"
                                    domain="[('id','in',parent.account_type_ids)]"
                                />
                            </tree>
                            <form>
                                <group name="detail" colspan="4" col="2">
                                    <separator
                                        string="Understanding Result"
                                        colspan="2"
                                    />
                                    <field
                                        name="understanding_result"
                                        nolabel="1"
                                        colspan="2"
                                    />
                                    <separator
                                        string="Impact to Financial Report"
                                        colspan="2"
                                    />
                                    <field
                                        name="impact_to_financial_report"
                                        nolabel="1"
                                        colspan="2"
                                    />
                                    <separator string="Related Accounts" colspan="2" />
                                    <field
                                        name="related_account_type_ids"
                                        widget="many2many_tags"
                                        domain="[('id','in',parent.account_type_ids)]"
                                        nolabel="1"
                                        colspan="2"
                                    />
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_ws_bdcdfc5_action" model="ir.actions.act_window">
        <field name="name">Understanding of the business environments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">general_audit_ws_bdcdfc5</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="general_audit_ws_bdcdfc5_menu"
        name="Understanding of the business environments"
        parent="ssi_general_audit.menu_general_audit_risk_assesment"
        action="general_audit_ws_bdcdfc5_action"
        sequence="1503"
        groups="general_audit_ws_bdcdfc5_viewer_group"
    />


</odoo>
