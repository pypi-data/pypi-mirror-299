<odoo>

    <record id="general_audit_business_function_view_search" model="ir.ui.view">
        <field name="name">general_audit_business_function - search</field>
        <field name="model">general_audit_business_function</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="general_audit_business_function_view_tree" model="ir.ui.view">
        <field name="name">general_audit_business_function - tree</field>
        <field name="model">general_audit_business_function</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='code']" position="before">
                    <field name="sequence" widget="handle" />
                    <field name="class_transaction_id" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_business_function_view_form" model="ir.ui.view">
        <field name="name">general_audit_business_function - form</field>
        <field name="model">general_audit_business_function</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='code']" position="after">
                    <field name="sequence" />
                    <field name="class_transaction_id" />
                    <field name="business_document_ids" widget="many2many_tags" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_business_function_action" model="ir.actions.act_window">
        <field name="name">Business Functions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">general_audit_business_function</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="general_audit_business_function_menu"
        name="Business Functions"
        parent="menu_configuration_business_process"
        action="general_audit_business_function_action"
        sequence="110"
        groups="general_audit_business_function_group"
    />

</odoo>
