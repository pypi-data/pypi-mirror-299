<GlowDialog>:
    border_radius: ['10dp', ]
    GlowBoxLayout:
        id: glow_dialog_content
        padding: ['24dp', ] if root.widget_style == 'desctop' else ['12dp', ]
        adaptive_height: True if root.size_hint_y is None else False
        orientation: 'vertical'
        spacing: '5dp'
        GlowIcon:
            id: glow_dialog_icon
            pos_hint: {'left': 0} if root.icon_position == 'left' else ({'center_x': .5} if root.icon_position == 'center' else {'right': 1})
            icon_size: root.icon_size
            color: root._icon_color
            adaptive_height: True
            icon: root.icon
        GlowLabel:
            id: glow_dialog_title
            text: root.title if root.title else ''
            halign: root.title_halign
            font_style: 'HeadlineL'
            adaptive_height: True
        GlowWidget:
            id: glow_dialog_top_separator
            height: '2dp' if root.use_separator else 0
            bg_color: self.theme_cls.divider_color
            pos_hint: {'center_y': .5}
            size_hint_y: None
        GlowScrollView:
            id: glow_dialog_content_container
            always_overscroll: False
            size_hint_y: 1 if root.stretch_content_height else None
        GlowVSpacer:
            adaptive_height: True if root.stretch_content_height else False
        GlowWidget:
            id: glow_dialog_bottom_separator
            height: '2dp' if root.use_separator else 0
            bg_color: self.theme_cls.divider_color
            pos_hint: {'center_y': .5}
            size_hint_y: None
        GlowBoxLayout:
            id: glow_dialog_buttons_container
            adaptive_size: True
            pos_hint: {'right': 1}
            spacing: '10dp'
